{
	"name": "@standard-config/eslint",
	"version": "1.3.3",
	"description": "TypeScript-first ESLint config designed to complement Oxlint",
	"license": "MIT",
	"author": {
		"name": "Dom Porada",
		"email": "dom@dom.engineering",
		"url": "https://dom.engineering"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/standard-config/eslint.git"
	},
	"keywords": [
		"eslint",
		"eslint-config",
		"flat-config",
		"oxc",
		"oxlint",
		"react",
		"standard-config",
		"type-aware",
		"typescript"
	],
	"files": [
		"dist/**"
	],
	"type": "module",
	"sideEffects": false,
	"exports": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.29.2",
	"dependencies": {
		"@eslint/compat": "^2.0.2",
		"eslint-plugin-oxlint": "^1.46.0",
		"eslint-plugin-perfectionist": "^5.5.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"typescript-eslint": "^8.55.0"
	},
	"peerDependencies": {
		"@standard-config/oxlint": "*",
		"eslint": ">=9",
		"typescript": ">=5"
	},
	"peerDependenciesMeta": {
		"@standard-config/oxlint": {
			"optional": true
		}
	},
	"devDependencies": {
		"@standard-config/oxlint": "1.1.0",
		"@standard-config/prettier": "1.9.1",
		"@standard-config/tsconfig": "2.0.2",
		"@types/node": "22.19.11",
		"@vitest/coverage-v8": "4.0.18",
		"eslint": "10.0.0",
		"husky": "9.1.7",
		"jiti": "2.6.1",
		"oxlint": "1.46.0",
		"oxlint-tsgolint": "0.11.5",
		"prettier": "3.8.1",
		"publint": "0.3.17",
		"tsdown": "0.20.3",
		"typescript": "5.9.3",
		"vitest": "4.0.18"
	},
	"scripts": {
		"build": "tsdown",
		"fix": "pnpm format && pnpm lint && pnpm format",
		"format": "prettier --ignore-unknown --log-level=warn --write .",
		"format:check": "prettier --check --ignore-unknown .",
		"lint": "oxlint --fix --report-unused-disable-directives --type-aware --type-check && eslint --fix .",
		"lint:check": "oxlint --deny-warnings --report-unused-disable-directives --type-aware --type-check && eslint .",
		"prepack": "pnpm run '/^(format:check|lint:check|test|typecheck)$/' && pnpm build",
		"prepare": "husky",
		"test": "vitest run",
		"typecheck": "tsc --noEmit"
	}
}
