{
	"name": "@standard-config/eslint",
	"version": "1.5.0",
	"description": "TypeScript-first ESLint config designed to complement Oxlint",
	"license": "MIT",
	"author": {
		"name": "Dom Porada",
		"email": "dom@dom.engineering",
		"url": "https://dom.engineering"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/standard-config/eslint.git"
	},
	"keywords": [
		"eslint",
		"eslint-config",
		"flat-config",
		"oxc",
		"oxlint",
		"react",
		"standard-config",
		"type-aware",
		"typescript"
	],
	"files": [
		"dist/**"
	],
	"type": "module",
	"sideEffects": false,
	"exports": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.30.0",
	"dependencies": {
		"@eslint/compat": "^2.0.2",
		"@stylistic/eslint-plugin": "^5.8.0",
		"eslint-plugin-perfectionist": "^5.6.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-naming-convention": "^2.13.0",
		"eslint-plugin-react-x": "^2.13.0",
		"typescript-eslint": "^8.56.0"
	},
	"peerDependencies": {
		"@standard-config/oxlint": "*",
		"eslint": ">=9",
		"typescript": ">=5"
	},
	"peerDependenciesMeta": {
		"@standard-config/oxlint": {
			"optional": true
		}
	},
	"devDependencies": {
		"@standard-config/oxlint": "^1.1.3",
		"@standard-config/prettier": "^1.9.1",
		"@standard-config/tsconfig": "^2.0.2",
		"@types/node": "^22.19.11",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "^9.39.2",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"oxlint": "^1.47.0",
		"oxlint-tsgolint": "^0.14.1",
		"prettier": "^3.8.1",
		"publint": "^0.3.17",
		"react": "^19.2.4",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"scripts": {
		"build": "tsdown",
		"fix": "pnpm format && pnpm lint && pnpm format",
		"format": "prettier --ignore-unknown --log-level=warn --write .",
		"format:check": "prettier --check --ignore-unknown .",
		"lint": "oxlint --fix --report-unused-disable-directives --type-aware --type-check && eslint --fix .",
		"lint:check": "oxlint --deny-warnings --report-unused-disable-directives --type-aware --type-check && eslint .",
		"prepack": "pnpm run '/^(format:check|lint:check|test|typecheck)$/' && pnpm build",
		"prepare": "husky",
		"test": "vitest run",
		"typecheck": "tsc --noEmit"
	}
}
