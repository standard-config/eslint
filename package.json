{
	"name": "@standard-config/eslint",
	"version": "1.2.1",
	"description": "TypeScript-first ESLint config designed to complement Oxlint and Prettier",
	"license": "MIT",
	"author": {
		"name": "Dom Porada",
		"email": "dom@dom.engineering",
		"url": "https://dom.engineering"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/standard-config/eslint.git"
	},
	"keywords": [
		"eslint",
		"eslint-config",
		"flat-config",
		"oxc",
		"oxlint",
		"prettier",
		"react",
		"typescript"
	],
	"files": [
		"dist/**"
	],
	"type": "module",
	"sideEffects": false,
	"exports": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.28.2",
	"dependencies": {
		"@eslint/compat": "^2.0.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-oxlint": "^1.42.0",
		"eslint-plugin-perfectionist": "^5.4.0",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"typescript-eslint": "^8.54.0"
	},
	"peerDependencies": {
		"eslint": ">=9",
		"typescript": ">=5"
	},
	"devDependencies": {
		"@standard-config/prettier": "1.7.0",
		"@standard-config/tsconfig": "2.0.2",
		"@types/node": "^22.19.7",
		"@vitest/coverage-v8": "4.0.18",
		"eslint": "9.39.2",
		"husky": "9.1.7",
		"jiti": "2.6.1",
		"oxlint": "1.42.0",
		"oxlint-tsgolint": "0.11.2",
		"prettier": "3.8.1",
		"publint": "0.3.17",
		"tsdown": "0.20.1",
		"typescript": "5.9.3",
		"vitest": "4.0.18"
	},
	"scripts": {
		"build": "tsdown",
		"fix": "pnpm format && pnpm lint",
		"format": "prettier --write --ignore-unknown .",
		"format:check": "prettier --check --ignore-unknown .",
		"lint": "oxlint --fix --type-aware --type-check --deny-warnings --report-unused-disable-directives && eslint . --fix",
		"lint:check": "oxlint --type-aware --type-check --deny-warnings --report-unused-disable-directives && eslint .",
		"prepack": "pnpm run '/^(format:check|lint:check|test|typecheck)$/' && pnpm build",
		"prepare": "husky",
		"test": "vitest run",
		"typecheck": "tsc --noEmit"
	}
}
